<div id="myModal" class="modal hide fade">
  <div class="modal-header">
    <a href="#close" class="btn btn-small fr big-font" data-dismiss="modal" aria-hidden="true">&times;</a>
    <h3>Add a place</h3>
  </div>
  <div class="modal-body">
    <div class="row">
      <div class="span4">
        <select id="place-city" name="place-city" class="input-block-level">
          <option value="New York City" selected="selected">New York City</option>
          <option value="San Francisco">San Francisco</option>
        </select>
      </div>
      <div class="span4">
        <input id="area" type="text" class="input-block-level" placeholder="Area" />
      </div>
      <div class="span4">
        <input id="category" type="text" class="input-block-level" placeholder="Category" />
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn">Close</a>
    <a href="#" class="btn btn-primary">Save changes</a>
  </div>
</div>