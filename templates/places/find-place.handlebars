						<option value="New York City">New York City</option>
						<option value="San Francisco">San Francisco</option>
					</select>
				</div>
				<div class="span4">
					<select name="place-area" class="find-place-area input-block-level">
						<option value="" selected="selected">Area</option>
					</select>
				</div>
				<div class="span4">
					<select name="place-category" class="find-place-category input-block-level" placeholder="category">
							<option value="" selected="selected">Category</option>
					</select>
				</div>
			</div>
		</div>

		<div class="box-content box-header">
			<h5>Places</h5>
		</div>
		<div class="places box-content">
		</div>
	</div>
</section>