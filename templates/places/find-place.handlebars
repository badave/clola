<section class="find-place">
	<div class="box box-light box-rounded span12">
		<div class="box-content box-header">
		  <a class="btn fr" href="#places-modal" data-toggle="modal">add place</a>
		  <h5>Find a place</h5>
		</div>
		<div class="box-content box-header">
			<h6>Cities</h6>
		</div>
		<div class="box-content">
			<div class="row">
				<div class="span12">
					<div class="places-cities">
						<% _.each(cities, function(city, idx) { %>
							<input id="find-city-<%= idx %>" name="city" type="checkbox" value="<%= city %>" class="toggle"></input>
							<label for="find-city-<%= idx %>" class="btn btn-large"><%= city %></label>
						<% }) %>
					</div>
				</div>
			</div>
		</div>	
		<div class="box-content box-header">
			<h6>Neighborhoods</h6>
		</div>
		<div class="box-content">
			<div class="row">
				<div class="span12">
					<div class="places-areas">
					</div>
				</div>
			</div>
		</div>	
		<div class="box-content box-header">
			<h6>Interest</h6>
		</div>
		<div class="box-content">
			<div class="row">
				<div class="span12">
					<div class="places-categories">
					</div>
				</div>
			</div>
		</div>	
		<div class="box-content box-header">
			<h6>Category</h6>
		</div>
		<div class="box-content">
			<div class="row">
				<div class="span12">
					<div class="places-subcategories">
					</div>
				</div>
			</div>
		</div>

		<div class="box-content box-header">
			<h5>Places</h5>
		</div>
		<div class="places box-content">
		</div>
	</div>
</section>