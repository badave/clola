<section class="find-place mid-wide">
	<div class="box box-light box-rounded span12">
		<div class="box-content box-header">
		  <a class="btn fr" href="#places-modal" data-toggle="modal">add place</a>
		  <h5>Find a place</h5>
		</div>
		<div class="box-content">
			<div class="row">
				<div class="span4">
					<select name="place-city" class="find-place-city input-block-level">
