<div class="page-header">
  <h4>{{#if model.name}}{{model.name}}<br />{{/if}}<small>{{model.phone}}{{#if model.email}} - {{model.email}}{{/if}}</small></h4>
</div>
{{#if model.description}}
<div>
	{{model.description}}
</div>
{{/if}}

{{#if model.previous_locations}}
<div>
	<h5>Reported Locations</h5>
	{{#each model.previous_locations}}
		<div>
	 		{{timeAgo this.updated}}: {{this.description}}
	 	</div>
	{{/each}}
</div>
{{/if}}

{{#if model.previous_places}}
<div>
	<h5>Sent to Places</h5>
	{{#each model.previous_places}}
		<div>
	 		{{timeAgo this.updated}}: <a href="javascript:;">{{this.name}}</a>
	 	</div>
	{{/each}}
</div>
{{/if}}


<p><button class="edit btn btn-small" type="button">edit</button></p>