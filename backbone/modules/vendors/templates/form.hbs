
<form id="info">
  <h5>Business Information</h5>
  <div class="row">
    <div class="span6">
      <div class="row">
        <input class="input-block-level" name="name" placeholder="Name of Place" type="text" />
      </div>
      <div class="row">
        <input class="input-block-level" name="address[street][0]" placeholder="Address #1" type="text" />
      </div>
      <div class="row">
        <input  class="input-block-level" name="address[street][1]" placeholder="Address #2" type="text" />
      </div>
      <div class="row">
        <div class="span2" style="width: 200px;">
          <input class="input-block-level" name="address[city]" placeholder="City" type="text" />
        </div>
        <div class="span2">
          <input type="text" name="address[state]" class="input-block-level" placeholder="State" />
        </div>
        <div class="span2">
          <input type="text" name="address[zip]" class="input-block-level" placeholder="Zip" />
        </div>

        <div class="btn btn-success btn-save">Save</div>
      </div>
    </div>
    <div class="span6">
    </div>
  </div>
</form>